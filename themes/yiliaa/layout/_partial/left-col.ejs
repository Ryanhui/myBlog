<% var defaultBg = '#4d4d4d'; %>
<div class="overlay" style="background: <%= theme.style && theme.style.header ? theme.style.header : defaultBg %>"></div>
<div class="intrude-less">
	<header id="header" class="inner">
		<a href="<%=theme.root%>" class="profilepic">
			<img src="<%=theme.avatar%>" class="js-avatar">
		</a>
		<hgroup>
		  <h1 class="header-author"><a href="<%=theme.root%>"><%=theme.author%></a></h1>
		</hgroup>
		<% if (theme.subtitle){ %>
		<p class="header-subtitle"><%=theme.subtitle%></p>
		<%}%>

		<nav class="header-menu">
			<ul>
			<% for (var i in theme.menu){ %>
				<li><a href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
	        <%}%>
			</ul>
		</nav>
		<nav class="header-smart-menu">
    		<% for (var i in theme.smart_menu){ %>
    			<% if(theme.smart_menu[i]){ %>
    			<a q-on="click: openSlider(e, '<%-i%>')" href="javascript:void(0)"><%= theme.smart_menu[i] %></a>
    			<% } %>
            <%}%>
		</nav>
		<nav class="header-nav">
			<div class="social">
				<% for (var i in theme.subnav){ %>
					<a class="<%= i %>" target="_blank" href="<%- url_for(theme.subnav[i]) %>" title="<%= i %>"><i class="icon-<%= i %>"></i></a>
		        <%}%>
			</div>
		</nav>
        <div class="aplayer" id="player1" ></div>
	</header>	
</div>

<script src="/assets/APlayer.min.js"></script>
<script>
    var intrudeLess = document.getElementsByClassName('intrude-less')[0];
    var overlay = document.getElementsByClassName('overlay')[0];
    var w = window,
        d = document,
        e = d.documentElement,
        g = d.getElementsByTagName('body')[0];

    function resize() {
        x = w.innerWidth || e.clientWidth || g.clientWidth;
        y = w.innerHeight|| e.clientHeight|| g.clientHeight;
        if( y <= 800 ) {
            intrudeLess.style.margin = "10px auto 0";        
            overlay.style.height = "80px";
        } else {
            intrudeLess.style.margin = "110px auto 0";
            overlay.style.height = "180px";
        }
    }

    window.onload = function(e) {
        resize();
    }

    window.onresize = function(e) {
        resize();
    }

    var ap = new APlayer({
        element: document.getElementById('player1'),
        narrow: false,
        autoplay: false,
        showlrc: false,
        mutex: true,
        theme: '#e6d0b2',
        preload: 'metadata',
        mode: 'circulation',
        music: [{
            title: 'F*** Darlin',
            author: 'UPLIFT SPICE',
            url: 'http://music.163.com/song/media/outer/url?id=28233276.mp3',
            pic: 'http://p1.music.126.net/WyljJxPwsTZdH1qz4qEl7g==/5901078906413544.jpg'
        }]
    });
</script>